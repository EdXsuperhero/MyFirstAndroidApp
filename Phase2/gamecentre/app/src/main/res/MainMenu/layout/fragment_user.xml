<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="30dp"
    android:layout_marginEnd="30dp"
    android:layout_marginTop="60dp"
    android:layout_marginBottom="70dp">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp"
        tools:srcCompat="@tools:sample/avatars[3]"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/welcomeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="45dp"
        android:layout_alignStart="@id/imageView"
        android:layout_marginStart="150dp"
        android:text="@string/welcome"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/welcomeUser"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/welcomeTitle"
        android:layout_alignTop="@id/welcomeTitle"
        android:layout_marginTop="20dp"
        android:textSize="25sp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_marginTop="200dp"
        android:background="@drawable/custom_layout_border">

            <TextView
                android:id="@+id/ChangeUsername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="0dp"
                android:background="@drawable/custom_textview_border"
                android:text="@string/change_username"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/ChangePassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/ChangeUsername"
                android:layout_marginTop="50dp"
                android:background="@drawable/custom_textview_border"
                android:text="@string/change_password"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/Logout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@drawable/custom_logout_border"
                android:text="@string/logout"
                android:textStyle="bold"/>

    </RelativeLayout>

</RelativeLayout>